{
  "name": "sam-starter-ts",
  "version": "1.0.0",
  "description": "AWS SAM starter template in Typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "sam:build": "cp ./package.json ./build/package.json && sam build",
    "clean:build": "rimraf -f build && sam validate && npm run build && npm run sam:build",
    "deploy:dev": "npm run clean:build && sam deploy --config-env dev",
    "deploy:prod": "npm run clean:build && sam deploy --config-env prod"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sam-starter-ts"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@types/aws-lambda": "^8.10.64",
    "@types/node": "^14.14.10",
    "@types/webpack": "^4.41.25",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "codecov": "^3.8.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "yaml-cfn": "^0.2.3"
  },
  "dependencies": {
    "@sentry/node": "^5.28.0",
    "aws-sdk": "^2.822.0"
  }
}
